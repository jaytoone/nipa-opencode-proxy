    "test:watch": "jest --watch",
    "stats": "node -e \"const http=require('http');http.get('http://localhost:3456/api/stats',r=>{let d='';r.on('data',c=>d+=c);r.on('end',()=>console.log(JSON.stringify(JSON.parse(d),null,2)))})\"",
    "lint": "eslint src/",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "opencode",
    "nipa",
    "kimi",
    "k2.5",
    "proxy",
    "token-estimation",
    "compaction",
    "ai-coding",
    "context-management",
    "cost-optimization"
  ],
